{% extends 'base.html.twig' %}

{% block body %}
    <h1>Highlander Says</h1>

    {% for message in app.flashes('info') %}
        <div class="flash-info">
            Info: {{ message }}
        </div>
    {% endfor %}

    {% for forecast in forecasts %}
        <p>{{ forecast }}</p>
    {% endfor %}

    {% if threshold %}<p>Threshold: {{ threshold }}.</p>{% endif %}

    <nav>
        <a href="{{ path('app_weather_highlandersays', {
            threshold: 11,
        }) }}">Try again!</a>
    </nav>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        const route = "{{ url('app_weather_highlandersays')|escape('js') }}";
        console.log(route);

        console.log("{{ api_key|escape('js') }}")
    </script>
{% endblock %}

{% block title %}Highlander Says{% endblock %}
